{
  "bindings": [
    {
      "authLevel": "function",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get",
        "post"
      ]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "name": "document",
      "direction": "in",
      "connectionStringSetting": "COSMOS_CONNECTION_STRING",
      "databaseName": "nlp-search",
      "collectionName": "users",
      "Id": "{headers.x-ms-client-principal-id}",
      "PartitionKey": "{headers.x-ms-client-principal-id}"
    },
    {
      "type": "cosmosDB",
      "name": "outputDocument",
      "direction": "out",
      "connectionStringSetting": "COSMOS_CONNECTION_STRING",
      "databaseName": "nlp-search",
      "collectionName": "users"
    }
  ]
}
{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "post"
      ]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "name": "document",
      "direction": "in",
      "connectionStringSetting": "COSMOS_CONNECTION_STRING",
      "databaseName": "nlp-search",
      "collectionName": "users",
      "Id": "{user_id}",
      "PartitionKey": "{user_id}"
    }
  ]
}